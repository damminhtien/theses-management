<!DOCTYPE html>
<html>
<head>
	<%include ../admin/layout/header%>
	<link href="/template/vendors/pnotify/dist/pnotify.css" rel="stylesheet">
	<%include ../admin/layout/style_dbtable%>
</head>
<body class="nav-md">
    <div class="container body">
      	<div class="main_container">
			<%include ../admin/layout/menu%>
			<!-- your code here -->
			<div class="right_col" role="main">
	            <div class="col-md-12 col-sm-12 col-xs-12">
                	<div class="x_panel">
                  		<div class="x_title">
                    		<h1 class="label label-success">Đồ án</h1>
                    		<div class="clearfix"></div>
                  		</div>
             		 	<div class="x_content">
            				<table id="datatable-buttons" class="table table-striped table-hover table-bordered">
                      			<thead>
                        			<tr>
                          				<th class="alert-success"><h3>STT</h3></th>
				                        <th class="alert-success"><h3>Giảng viên</h3></th>
				                        <th class="alert-success"><h3>Sinh viên</h3></th>
				                        <th class="alert-success"><h3>Trạng thái</h3></th>
				                        <th class="alert-success"><h3>Mã nguồn cuối</h3></th>
				                        <th class="alert-success"><h3>Tên đề tài</h3></th>
				                        <th class="alert-success"><h3>Kì học</h3></th>
				                        <th class="alert-success"><h3>Tệp báo cáo</h3></th>
				                        <th class="alert-success"><h3>Ghi chú sinh viên</h3></th>
				                        <th class="alert-success"><h3>Ghi chú giảng viên</h3></th>
				                        <th class="alert-success"><h3>Loại đồ án</h3></th>
				                        <th class="alert-success"><h3>Điểm</h3></th>
				                        <th class="alert-success"><h3>Sửa / Xóa</h3></th>
                        			</tr>
                      			</thead>
                      			<tbody>
                        			<% if(doan != null ){ 
										doan.forEach((da,i)=>{%>
										<tr>
											<td><button class="btn btn-primary btn-round btn-xs"><%=i + 1%></button>
											</td>
											<td><h2><%=da.ma_gv%></h2></td>
											<td><h2><%=da.ma_sv%></h2></td>
											<td><h2><%=da.ma_tt%></h2></td>
											<td><h2><%=da.ma_mnc%></h2></td>
											<td><h2><%=da.ten_de_tai%></h2></td>
											<td><h2><%=da.ki_hoc%></h2></td>
											<td><h2><%=da.tep_bao_cao%></h2></td>
											<td><h2><%=da.ghi_chu_sv%></h2></td>
											<td><h2><%=da.ghi_chu_gv%></h2></td>
											<td><h2><%=da.ma_lda%></h2></td>
											<td><h2><%=da.diem%></h2></td>
											<td class="text-center">
												<a href="/doan/sua/<%=da.ma_da%>" title="Sửa <%=da.ma_da%>"><button class="btn btn-warning btn-xs"><span class="fa fa-pencil"></span></button></a>	
												<a href="/doan/xoa/<%=da.ma_da%>"><button class="btn btn-danger btn-xs"><span class="fa fa-trash"></span></button></a>
											</td>
										</tr>
									<%})}%>
                      			</tbody>
                    		</table>
                    		<a href="/doan/them" title="Thêm đồ án"><button class="btn btn-info btn-lg btn-round" style="z-index: 99; right: 2%; bottom: 2%; position: fixed; width: 60px; height: 60px;"><span class="fa fa-plus"></span></button></a>
                  		</div>
                	</div>
              	</div>
			</div>	
			<!-- your code end-->
			<%include ../admin/layout/footer%>
		</div>
	</div>
	<%include ../admin/layout/script%>
	<%include ../admin/layout/script_dbtable%>
	<!-- pnotify -->
	<script src="/template/vendors/pnotify/dist/pnotify.js"></script>
    <script src="/template/vendors/pnotify/dist/pnotify.buttons.js"></script>
    <script src="/template/vendors/pnotify/dist/pnotify.nonblock.js"></script>
	<script>
	   	$('document').ready(function (){
	       $('.ui-pnotify').remove();
	       <%- include ../flash_message %>
	   	});
	</script>
</body>
</html>